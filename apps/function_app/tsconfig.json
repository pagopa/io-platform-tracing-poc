{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
  }, 
  "exclude": [
    "node_modules",
    "dist",
    "__mocks__",
    "docker",
    "**/__tests__",
    "**/__integrations__",
    "Dangerfile.ts"
  ]
}