{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }, 
  "exclude": [
    "node_modules",
    "dist",
    "__mocks__",
    "docker",
    "**/__tests__",
    "**/__integrations__",
    "Dangerfile.ts"
  ]
}